<h1><%= @subject.name %></h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to @subject.area.name, @subject.area %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= @subject.name %></li>
  </ol>
</nav>

<h1>Topics</h1>

<div class="row">
  <div class="col-md-9">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td><%= topic.name %></td>
          <td class="text-right">
            <div class="btn-group btn-group-sm">
              <%= link_to 'Show', topic, class: "btn btn-outline-primary" %>
              <%= link_to 'Edit', edit_topic_path(topic), class: "btn btn-outline-primary" %>
              <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-warning" %>
            </div>
          </td>
        </tr>
      <% end %>
      <tr>
        <td></td>
        <td><%= render 'online_course/topics/form' %></td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="col-md-3">
    <%= link_to 'Edit', edit_subject_path(@subject), class: "btn btn-outline-secondary btn-block" %>
  </div>
</div>